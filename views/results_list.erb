<% @items = [{id: 2, name: "John Doe", avatar: "//placehold.it/100", phone: "(123) 456-7890", info: "There will be text here"},
             {id: 3, name: "Jane Doe", avatar: "//placehold.it/100", phone: "(123) 456-7891", info: "This is about Jane Doe"},
             {id: 4, name: "Winnie the Pooh", avatar: "http://cdnvideo.dolimg.com/cdn_assets/c94eed56a5e84479a2939c9172434567c0147d4f.jpg", phone: "(123) 456-7892", info: "PhD. in Honey Consumption", bookmarked: true}] %>

<ul class="collection">
<%= partial :results_items %>
  <li class="collection-item avatar" id="load_more">
    <button>Load More</button>
  </li>
</ul>

<script>
  $("#load_more").click(function() {
      $.ajax({
          url: '/results/more',
          type: 'POST',
          data: {
              offset: $(".result_item").length
          },
          success: function (data) {
              $("#load_more").before(data);
          }
      });
  })
</script>
